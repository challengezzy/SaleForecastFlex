package aks.aksas.utils
{
	public class UtilNumber
	{
		public function UtilNumber()
		{
		}
		
		public static function isInteger( _number:Number ):Boolean
		{
			if( isNaN(_number) )
			{
				return false;
			}
			
			var numberFloor:int = Math.floor( _number );
			if( _number != numberFloor )
			{
				return false;
			}
			
			return true;
		}
	}
}