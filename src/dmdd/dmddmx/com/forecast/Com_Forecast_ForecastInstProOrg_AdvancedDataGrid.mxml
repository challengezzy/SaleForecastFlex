			private function sortCompareFunction4ProductCode(obj1:BForecastInstProOrg, obj2:BForecastInstProOrg):int
			{
				if( obj1 == null )
				{
					return -1;
				}
				
				if( obj2 == null )
				{
					return 1;
				}
				
				var rstCompare:int = obj1.product.code.localeCompare( obj2.product.code )
				if( rstCompare < 0 )
				{
					return -1;
				}
				else if( rstCompare > 0 )
				{
					return 1;
				}
				else
				{
					return 0;
				}
			}			
			
