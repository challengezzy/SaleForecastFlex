			private function resultHandler4getUiRowDatas(event:ResultEvent):void 
			{
				btnExportData.enabled = true;
				btnRefreshChart.enabled = true;
				
				
				dp4adgUiRowData = ArrayCollection(event.result);
				
				var i:int;
				var seledtedUnit:BUnit = null;
				var uiRowData:ABUiRowData = null;
				
				var periodDiff:int;
				var periodLoc:int;
				var aitemValue:Number;
				var bitemValue:Number;
				var kpiValue:Number;
				var kpiFormula:int;
				
				var numberFormatter:NumberFormatter = new NumberFormatter();
				numberFormatter.precision = 2;
				var myPattern:RegExp = /,/g;//用来去掉格式化后的逗号
				
				if( dp4adgUiRowData != null )
				{
					seledtedUnit = BUnit(comboBoxUnit.selectedItem);		
					
					for( i=0; i<dp4adgUiRowData.length; i=i+1 )
					{
						uiRowData = ABUiRowData(dp4adgUiRowData.getItemAt(i));
						
						if( uiRowData.bizData.type != BizConst.BIZDATA_TYPE_KPI )
						{
							//	非Kpi数据换算后放入显示表格
							if( seledtedUnit != null && seledtedUnit.isBase == BizConst.GLOBAL_YESNO_NO )
							{
								uiRowData.exchangeUnit( 1, seledtedUnit.exchangeRate );						
							}						
						}
						else
						{
							if( uiRowData.bizData.bizDataDefItems != null && uiRowData.bizData.bizDataDefItems.length == 1 )
							{
								kpiFormula = BBizDataDefItemKpi(uiRowData.bizData.bizDataDefItems.getItemAt(0)).kpiFormula;
							}
							if( seledtedUnit != null && seledtedUnit.isBase == BizConst.GLOBAL_YESNO_NO )
							{
								uiRowData.exchangeKPIUnit( 1, seledtedUnit.exchangeRate );						
							}
						}
						
						//按照汇总期间数来分解  begin
						periodDiff = UtilPeriod.getPeriodDifference( uiRowData.periodBegin, uiRowData.periodEnd );
						var diff:int = (periodDiff+1)/qcondPeriodStatistics;
						var total:Number  = 0;
						var diff_num:int = 1;
						var total_statistics:Number = 0;
						var total_statistics_a:Number = 0,total_statistics_b:Number = 0;
						var total_a:Number=0,total_b:Number=0;
						for( periodLoc = 0; periodLoc <= periodDiff; periodLoc = periodLoc + 1 )
						{
							if( uiRowData.bizData.type != BizConst.BIZDATA_TYPE_KPI )
							{	
								total_statistics = total_statistics+uiRowData.pubFun4getPeriodDataValue(periodLoc);
								
								if(periodLoc == (diff_num*qcondPeriodStatistics-1))
								{
									total_statistics = Number(total_statistics.toPrecision(15));
									uiRowData.pubFun4setPeriodDataValue((diff_num-1),total_statistics);
									uiRowData.pubFun4setPeriodDataValueBak((diff_num-1),total_statistics);
									if(periodDiff != periodLoc)
									{
										diff_num = diff_num+1;
									}
									total = total + total_statistics;
									total_statistics = 0;
									
								}
								if(periodDiff == periodLoc) // 汇总
								{
									total = Number((total + total_statistics).toPrecision(15));
									uiRowData.pubFun4setPeriodDataValue((diff_num),total);
									uiRowData.pubFun4setPeriodDataValueBak((diff_num),total);										
								}
							}
							else
							{								
								//	kpi数据，计算真正的Kpi值														
								aitemValue = uiRowData.pubFun4getPeriodDataValue( periodLoc );
								bitemValue = uiRowData.pubFun4getPeriodDataValueBak( periodLoc );
								
								if( kpiFormula == BizConst.BIZDATADEFITEM_KPIFORMULA_RATIO )
								{									
									if( isNaN(aitemValue)  )
									{
										aitemValue = 0;
									}
									if(isNaN(bitemValue))
									{
										bitemValue = 0;
									}
									total_statistics_a = total_statistics_a+aitemValue;
									total_statistics_b = total_statistics_b+bitemValue;
									
									if(periodLoc == (diff_num*qcondPeriodStatistics-1))
									{
										if( isNaN(total_statistics_a) || isNaN(total_statistics_b) )
										{
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), NaN );
										}
										else if( total_statistics_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), NaN );								
										}
										else
										{
											kpiValue = total_statistics_a / total_statistics_b * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ));
											
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), kpiValue );
											total_a = total_a  + total_statistics_a;
											total_b = total_b + total_statistics_b ;
											total_statistics_a = 0;
											total_statistics_b = 0;
											
										}
										
										if(periodDiff != periodLoc)
										{
											diff_num = diff_num+1;
										}
									}
									
									if(periodDiff == periodLoc) // 汇总
									{
										total_a = total_a  + total_statistics_a;
										total_b = total_b + total_statistics_b ;
										
										if( isNaN(total_a) || isNaN(total_b) )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak(diff_num, NaN );
											
										}
										else if( total_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, NaN );								
										}
										else
										{
											kpiValue = total_a / total_b * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ));
											
											uiRowData.pubFun4setPeriodDataValue( diff_num, kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, kpiValue );
										}
									}
								}
								else if( kpiFormula == BizConst.BIZDATADEFITEM_KPIFORMULA_INCREMENTRATIO )
								{
									
									if( isNaN(aitemValue)  )
									{
										aitemValue = 0;
									}
									if(isNaN(bitemValue))
									{
										bitemValue = 0;
									}
									total_statistics_a = total_statistics_a+aitemValue;
									total_statistics_b = total_statistics_b+bitemValue;		
									
									if(periodLoc == (diff_num*qcondPeriodStatistics-1))
									{	
										if( isNaN(total_statistics_a) || isNaN(total_statistics_b) )
										{
											uiRowData.pubFun4setPeriodDataValue(  (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak(  (diff_num-1), NaN );
										}
										else if( total_statistics_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue(  (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak(  (diff_num-1), NaN );								
										}
										else
										{
											kpiValue = Math.abs( total_statistics_a - total_statistics_b ) / total_statistics_b * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ) );
											
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), kpiValue );	
											total_a = total_a + total_statistics_a;
											total_b = total_b + total_statistics_b ;
											total_statistics_a = 0;
											total_statistics_b = 0;
											
										}	
										if(periodDiff != periodLoc)
										{
											diff_num = diff_num+1;
										}
									}
									if(periodDiff == periodLoc)  // 汇总
									{
										total_a = total_a + total_statistics_a;
										total_b = total_b + total_statistics_b ;
										
										if( isNaN(total_a) || isNaN(total_b) )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, NaN );
										}
										else if( total_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, NaN );								
										}
										else
										{
											kpiValue = Math.abs( total_a - total_b ) / total_b * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ) );
											
											uiRowData.pubFun4setPeriodDataValue(diff_num, kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, kpiValue );								
										}	
									}
								}
								else if( kpiFormula == BizConst.BIZDATADEFITEM_KPIFORMULA_INCREMENTRATIO_I )
								{
									if( isNaN(aitemValue)  )
									{
										aitemValue = 0;
									}
									if(isNaN(bitemValue))
									{
										bitemValue = 0;
									}
									total_statistics_a = total_statistics_a+aitemValue;
									total_statistics_b = total_statistics_b+bitemValue;		
									
									
									if(periodLoc == (diff_num*qcondPeriodStatistics-1))
									{
										if( isNaN(total_statistics_a) || isNaN(total_statistics_b) )
										{
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), NaN );
										}
										else if( total_statistics_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), NaN );								
										}
										else
										{
											kpiValue = (1 - Math.abs( total_statistics_a - total_statistics_b ) / total_statistics_b) * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ) );
											
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), kpiValue );
											total_a = total_a + total_statistics_a;
											total_b = total_b + total_statistics_b ;
											total_statistics_a = 0;
											total_statistics_b = 0;
											
										}
										if(periodDiff != periodLoc)
										{
											diff_num = diff_num+1;
										}
									}	
									if(periodDiff == periodLoc) // 汇总
									{
										total_a = total_a + total_statistics_a;
										total_b = total_b + total_statistics_b ;
										
										if( isNaN(total_a) || isNaN(total_b) )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, NaN );
										}
										else if( total_b == 0 )
										{
											uiRowData.pubFun4setPeriodDataValue( diff_num, NaN );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, NaN );						
										}
										else
										{
											kpiValue = (1 - Math.abs( total_a - total_b ) / total_b) * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ) );
											
											uiRowData.pubFun4setPeriodDataValue( diff_num, kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( diff_num, kpiValue );								
										}
									}										
								}
								else if( kpiFormula == BizConst.BIZDATADEFITEM_KPIFORMULA_INCREMENTRATIO_II )
								{
										if( isNaN(aitemValue)  )
										{
											aitemValue = 0;
										}
										if(isNaN(bitemValue))
										{
											bitemValue = 0;
										}
										total_statistics_a = total_statistics_a+aitemValue;
										total_statistics_b = total_statistics_b+bitemValue;		
										
									
									if(periodLoc == (diff_num*qcondPeriodStatistics-1))
									{
										if( isNaN(total_statistics_a) )
										{
											total_statistics_a = 0;
										}
										if( isNaN(total_statistics_b) )
										{
											total_statistics_b = 0;
										}
										
										if( total_statistics_a + total_statistics_b == 0 )
										{
											//	分母为0
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), NaN );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), NaN );																		
										}
										else
										{
											kpiValue = 2.0 * Math.abs(total_statistics_a - total_statistics_b) / (total_statistics_a + total_statistics_b) * 100.0;
											kpiValue = Number( numberFormatter.format( kpiValue ).replace(myPattern,"" ) ); 
											
											uiRowData.pubFun4setPeriodDataValue( (diff_num-1), kpiValue );
											uiRowData.pubFun4setPeriodDataValueBak( (diff_num-1), kpiValue );	
											
											total_a = total_a + total_statistics_a;
											total_b = total_b + total_statistics_b ;
											total_statistics_a = 0;
											total_statistics_b = 0;
											
										}	
										if(periodDiff != periodLoc)
										{
											diff_num = diff_num+1;
