						alert_msg  = resourceManager.getString('alert','alert_msg_inputdate_err12');
						Alert.show( alert_msg, alert_title_hint );	
						return;
					}					
					var ma:RegExp = new RegExp("^[0-9]+$");
					if(!ma.test(date_begin))
					{
						alert_msg  = resourceManager.getString('alert','alert_msg_inputdate_err12');
						Alert.show( alert_msg, alert_title_hint );	
						return;
					}
				}
				if(date_end=="")
