					alert_msg  = resourceManager.getString('alert','alert_msg_inputdate12');
					Alert.show( alert_msg, alert_title_hint );	
					return;											
				}
				else
				{
					if(date_end.length!=8)
					{
						alert_msg  = resourceManager.getString('alert','alert_msg_inputdate_err12');
						Alert.show( alert_msg, alert_title_hint );	
						return;
					}					
					if(!ma.test(date_end))
					{
						alert_msg  = resourceManager.getString('alert','alert_msg_inputdate_err12');
						Alert.show( alert_msg, alert_title_hint );	
						return;
					}
